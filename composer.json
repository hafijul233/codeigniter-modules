{
    "name": "hafijul233/codeigniter-modules",
    "description": "This is my package codeigniter-modules",
    "keywords": [
        "hafijul233",
        "codeigniter-modules"
    ],
    "homepage": "https://github.com/hafijul233/codeigniter-modules",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammad Hafijul Islam",
            "email": "hafijul233@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4||^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Hafijul\\Module\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hafijul\\Module\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
